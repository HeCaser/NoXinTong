<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogBottomInOutAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_out_anim</item>

    </style>

    <style name="DialogFadeCenterInOutAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out_center</item>

    </style>
</resources>
